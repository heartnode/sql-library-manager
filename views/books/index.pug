extends ../layout

block content
  h1= title
  form(action="/books/search" method="GET")
    input(type="text" placeHolder="Search for books" id="searchText" name="query")
    input(type="submit" id="searchBtn" value="Search")
  p 
    a(class="button", href="/books/new") Create New Book 
  table 
    thead 
      tr 
        th Title 
        th Author 
        th Genre 
        th Year 
    tbody 
      each book in books 
        tr 
          td 
            a(href=`/books/${book.id}`)= book.title 
          td= book.author 
          td= book.genre 
          td= book.year 
  include pagination.pug 